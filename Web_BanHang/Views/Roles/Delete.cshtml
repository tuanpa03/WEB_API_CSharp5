@model Website_BanHang.Models.Roles

@{
    ViewData["Title"] = "Xóa quyền truy cập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Xóa quyền truy cập 😥😥😥</h3>
<div>
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a>Xóa quyền truy cập</a></li>
        </ol>
    </nav>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleCode)
        </dd>
        <dt class = "col-sm-2">
            Tên quyền
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
        <dt class = "col-sm-2">
            Mô tả quyền
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoleCode" />
        <input type="submit" value="Delete" class="btn btn-danger mb-2" />
        <a class="btn btn-secondary mb-2" type="button" asp-action="Index">Back to List</a>
    </form>
</div>
